<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="VirgoAppTheme" parent="AppBaseTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/app_startup_screen_bg</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="ActivityAlphaBackground">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="@android:windowEnterAnimation">@anim/fade_in</item>
        <item name="@android:windowExitAnimation">@anim/fade_out</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="ActivityAlphaBackground1">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="@android:windowEnterAnimation">@anim/in_from_right</item>
        <item name="@android:windowExitAnimation">@anim/out_to_left</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    
    <style name="Line">
        <item name="android:background">@color/gray_line</item>
    </style>
    <style name="Line.Heng">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>
    <style name="Line.Shu">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/lightprogressdialog_spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
</resources>