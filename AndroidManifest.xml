<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cafe.virgo"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.cafe.virgo.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/sjb_ic_launcher1"
        android:label="@string/app_name"
        android:theme="@style/VirgoAppTheme" >
        <activity
            android:name="com.cafe.virgo.activity.StartScreenActivity"
            android:clearTaskOnLaunch="true"
            android:noHistory="true"
            android:screenOrientation="landscape"
            android:theme="@style/AppLaucherTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cafe.virgo.activity.MainPageActivity"
            android:clearTaskOnLaunch="true"
            android:noHistory="true"
            android:screenOrientation="landscape"
            android:theme="@style/AppLaucherTheme" >
        </activity>

    </application>

</manifest>